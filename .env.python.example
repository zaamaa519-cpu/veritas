# Python Flask backend (app.py) - copy to .env in same folder as app.py
# cp .env.python.example .env

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=True

# MongoDB - REQUIRED
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=YourApp

# OpenAI (optional - for AI verification)
OPENAI_API_KEY=

# NewsAPI (optional - for source verification)
NEWSAPI_KEY=

# Twitter API (optional - for Twitter verification)
TWITTER_BEARER_TOKEN=

# Google Search (optional - for fact-checking)
GOOGLE_API_KEY=
GOOGLE_SEARCH_CX=

# CORS - allow Next.js frontend
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
